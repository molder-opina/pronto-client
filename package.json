{
  "name": "pronto-frontend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:employees": "PRONTO_TARGET=employees vite",
    "dev:clients": "PRONTO_TARGET=clients vite",
    "build:employees": "PRONTO_TARGET=employees vite build",
    "build:clients": "PRONTO_TARGET=clients vite build",
    "lint": "eslint \"src/{employees_app,clients_app}/static/js/src/**/*.{ts,tsx,vue}\"",
    "format": "prettier --write \"{src/**/*.ts,src/**/*.tsx,src/**/*.vue,*.{ts,tsx,js,json,md}}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:qa": "playwright test tests/e2e/qa-complete.spec.ts",
    "test:all": "npm run test && npm run test:e2e"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/vue": "^8.0.1",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vue/test-utils": "^2.4.5",
    "autoprefixer": "^10.4.23",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-vue": "^9.25.0",
    "jsdom": "^24.0.0",
    "playwright": "^1.58.0",
    "postcss": "^8.5.6",
    "prettier": "^3.2.4",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vitest": "^1.5.0",
    "vitest-canvas-mock": "^0.3.3",
    "vue": "^3.5.27"
  },
  "dependencies": {
    "@eddym06/custom-chrome-mcp": "^1.2.4",
    "lucide": "^0.563.0",
    "lucide-vue-next": "^0.563.0"
  },
  "description": "Pronto is a comprehensive restaurant management system designed to streamline operations for employees (Waiters, Chefs, Cashiers, Admins) and provide a seamless experience for clients.",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/molder-opina/pronto-app.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/molder-opina/pronto-app/issues"
  },
  "homepage": "https://github.com/molder-opina/pronto-app#readme"
}
